

<% include('../layouts/header.ejs') %>


<div class="container-fluid  mt-3" >
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="content-container border rounded p-4" style="border: 1px solid #1aff00; box-shadow: 4px 4px 10px rgba(234, 110, 22, 0.1)0.1;">
                <h1 class="text-center mt-5" style="font-family: 'Arial', sans-serif;">User Login</h1>
                <% if (typeof message !== 'undefined') { %>
                    <h4 class="text-center"><%= message %></h4>
                <% } %>

                <form action="/login" method="post">
                    <div class="mb-3 mt-5">
                        <input type="email" name="email" class="form-control" required placeholder="Enter email">
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" required placeholder="Enter password">
                    </div>
                    <div class="text-center"> <!-- Centering the Login button -->
                        <button type="submit" class="btn btn-primary" style="width: 10rem;">Login</button>
                    </div>
                </form>

                <div class="text-center"> <!-- Centering the "Don't have an account" message -->
                    <p class="mt-5">Don't have an account</p>
                    <form action="/register">
                        <button type="submit" class="btn btn-primary" style="width: 10rem;">Go To Register</button>
                    </form>
                </div>

                <form action="/admin">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" style="width: 10rem;">Admin Login</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>
